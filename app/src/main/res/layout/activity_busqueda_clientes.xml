<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.patumecha.osocron.ordendecompras.BusquedaClientes"
    android:background="#ffff8228"
    android:id="@+id/clientesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/titleClienteTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:singleLine="false"
        android:text="BÃºsqueda de Clientes:"
        android:layout_marginTop="40dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clientesAutoCompleteTextView"
        android:layout_below="@+id/titleClienteTextView"
        android:layout_marginTop="64dp"
        android:textColor="#ffffffff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#ffffffff"
        android:textIsSelectable="false"
        android:inputType="textCapCharacters" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Cliente"
        android:id="@+id/addClientButton"
        android:layout_below="@+id/clientesAutoCompleteTextView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/clientesAutoCompleteTextView"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff" />
</RelativeLayout>
