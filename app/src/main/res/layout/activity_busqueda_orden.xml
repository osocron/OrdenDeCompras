<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.patumecha.osocron.ordendecompras.BusquedaOrden"
    android:background="#ff7f43ff"
    android:id="@+id/busqOrdenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/busqOrdenTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:singleLine="false"
        android:text="BÃºsqueda de Orden:"
        android:layout_marginTop="40dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ordenesAutoCompleteTextView"
        android:layout_below="@+id/busqOrdenTextView"
        android:layout_marginTop="64dp"
        android:textColor="#ffffffff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Nombre del cliente..."
        android:textColorHint="#ffffffff"
        android:textIsSelectable="false"
        android:inputType="textCapCharacters" />


</RelativeLayout>
