<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff07baff">

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:textColor="#ffffffff"
        android:inputType="textCapCharacters"
        android:layout_alignStart="@+id/scanButton">
        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:id="@+id/codeTextView"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="false"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/queryButton"
        android:textColor="#ffffffff"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_below="@+id/codeEditText"
        android:layout_marginTop="15dp"
        android:text="Search"
        android:minWidth="165dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan it!"
        android:id="@+id/scanButton"
        android:textColor="#ffffffff"
        style="@android:style/Widget.Holo.Button"
        android:layout_alignBottom="@+id/queryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/queryButton"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agreagar a Orden de Pedidos"
        android:id="@+id/fastAddItemButton"
        android:layout_below="@+id/queryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/queryButton"
        android:layout_alignEnd="@+id/queryButton"
        android:layout_marginTop="15dp"
        style="@android:style/Widget.Holo.ImageButton"
        android:textColor="#ffffffff"
        android:layout_marginLeft="10dp" />


</RelativeLayout>